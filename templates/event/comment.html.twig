{% extends 'base.html.twig' %}
{% block body %}
    <div class="jumbotron" style="background-color: white">
        <h2>Modifier ton commentaire : </h2>
        {{ form_start(form) }}
        <div class="form-group">
            {{ form_row(form.content, { 'label': 'Modifier le contenu : ' ,'attr': {'class': 'form-control'}}) }}
            {{ form_row(form.note, { 'label': "Modifier la note : " ,'attr': {'class': 'form-control'}}) }}
        </div>
        {{ form_row(form.save, { 'label': 'Submit me' }) }}
        <br>
        {{ form_end(form) }}    </div>
{% endblock %}
